{
    "manifest_version": 2,
    "name": "CopyAsPlainText",
    "version": "1.0",
    "description": "It's copy text without HTML tags with shortcut Ctrl + C.",
    "content_scripts": [
        {
            "matches": [
                "*://*.mozilla.org/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ]
}